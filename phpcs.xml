<?xml version="1.0"?>
<ruleset name="Lumen PHP Coding Standard">
    <description>PHP coding standard for this application</description>

    <file>./</file>

    <!-- Excludes these files -->
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/framework/views/*</exclude-pattern>
    <exclude-pattern>*/database/seeds/*</exclude-pattern>
    <!-- ignore warnings and display ERRORS only -->
    <arg  value="np"/>

    <!-- Our base rule: set to PSR12-->
    <rule  ref="PSR12"/>
</ruleset>